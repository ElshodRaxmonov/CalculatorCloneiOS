<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myViewModel"
            type="com.example.ioscalculatorclone.CalculatorViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/written_operation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="end|bottom"
                android:text="@{myViewModel.operation}"
                android:textColor="#A5A5A5"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:maxLines="1"
                android:text="@{myViewModel.display}"
                android:textColor="#FFFFFF"
                android:textSize="64sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="64sp"
                android:autoSizeStepGranularity="2sp"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:columnCount="4"
            android:rowCount="5">

            <Button
                android:id="@+id/btnAC"
                style="@style/CalcButton.Gray"
                android:text="AC" />

            <Button
                android:id="@+id/btnEmpty1"
                style="@style/CalcButton.Gray"
                android:text="+/-" />

            <Button
                android:id="@+id/removed"
                style="@style/CalcButton.Gray"
                android:text="%" />

            <Button
                android:id="@+id/btnDivide"
                style="@style/CalcButton.Orange"
                android:text="/" />

            <Button
                android:id="@+id/btn7"
                style="@style/CalcButton.Dark"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/CalcButton.Dark"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/CalcButton.Dark"
                android:text="9" />

            <Button
                android:id="@+id/btnMultiply"
                style="@style/CalcButton.Orange"
                android:text="x" />

            <Button
                android:id="@+id/btn4"
                style="@style/CalcButton.Dark"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/CalcButton.Dark"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/CalcButton.Dark"
                android:text="6" />

            <Button
                android:id="@+id/btnMinus"
                style="@style/CalcButton.Orange"
                android:text="-" />

            <Button
                android:id="@+id/btn1"
                style="@style/CalcButton.Dark"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/CalcButton.Dark"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/CalcButton.Dark"
                android:text="3" />

            <Button
                android:id="@+id/btnPlus"
                style="@style/CalcButton.Orange"
                android:text="+" />


            <Button
                android:id="@+id/btnToast"
                style="@style/CalcButton.Dark"
                android:text=":)" />

            <Button
                android:id="@+id/btn0"
                style="@style/CalcButton.Dark"
                android:text="0" />

            <Button
                android:id="@+id/btnDot"
                style="@style/CalcButton.Dark"
                android:text="." />

            <Button
                android:id="@+id/btnEquals"
                style="@style/CalcButton.Orange"
                android:text="=" />


        </GridLayout>
    </LinearLayout>
</layout>